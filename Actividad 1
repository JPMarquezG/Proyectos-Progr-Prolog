% Hechos

conecta_con(vancouver,edmonton,16).
conecta_con(vancouver,calgary,13).
conecta_con(edmonton,saskatoon,12).
conecta_con(calgary,edmonton,4).
conecta_con(calgary,regina,14).
conecta_con(saskatoon,calgary,9).
conecta_con(saskatoon,winnipeg,20).
conecta_con(regina,saskatoon,7).
conecta_con(regina,winnipeg,4). 

%preguntas:
% Existe una conexión entre Saskatoon y Vancouver?
       conecta_con(saskatoon,vancouver,_).

% Con qué nodos está conectado Regina y cual es el costo de cada conexión?
       conecta_con(regina,X,Costo).

% Es posible viajar desde Edmonton a Calgary?
       posibilidad_viajar_a(X,Y,_):- 
    conecta_con(X,Y,); (  conecta_con(X,Z,),conecta_con(Z,Y,_)).  

% Reglas
%Construir una regla para determinar si un nodo tiene aristas
         tiene_aristas(X) :- conecta_con(X,,) .

%Construir una regla para determinar cuál es el costo para ir de un nodo X a un Z pasando por Y.
 %primera opcion:
         costo_de_un_punto_a_otro(Inicio,Intermedio,Final,Costo):- 
         conecta_con(Inicio, Intermedio, Costo1), conecta_con(Intermedio, Final, Costo2), Costo is Costo1 + Costo2.
% segunda opcion:
        costo_de_puntoA_a_puntoB_pasando_por_punto_intermedio(Inicio,Final,Costo):- 
           conecta_con(Inicio , Y, Costo1 ) , conecta_con(Y , Final, Costo2 ), Costo is Costo1+Costo2.

